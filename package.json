{
  "name": "iterra-player",
  "version": "1.1.8",
  "main": "main.js",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:electron": "ng build --base-href ./ && electron .",
    "build": "ng build",
    "build:electron": "ng build --base-href ./ && electron-builder build --win --publish never",
    "deploy:electron": "electron-builder build --win --publish always",
    "compile": "cross-env MODE=production npm run build:electron",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "postinstall": "install-app-deps"
  },
  "nsis": {
    "deleteAppDataOnUninstall": true
  },
  "build": {
    "appId": "iterrait/player-app",
    "linux": {
      "target": "deb",
      "icon": "build/32x32.png"
    },
    "files": [
      "!src",
      "!.angular"
    ],
    "deb": {},
    "asar": false,
    "publish": [
      {
        "provider": "github",
        "owner": "iterrait",
        "repo": "player-app"
      }
    ]
  },
  "dependencies": {
    "@types/electron": "^1.6.10",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0",
    "node-schedule": "^2.1.1",
    "node-telegram-bot-api": "^0.63.0",
    "postinstall": "^0.8.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.10",
    "@angular/animations": "~17.3.12",
    "@angular/cdk": "~17.3.10",
    "@angular/cli": "^17.3.10",
    "@angular/common": "~17.3.12",
    "@angular/compiler": "~17.3.12",
    "@angular/compiler-cli": "^17.3.12",
    "@angular/core": "~17.3.12",
    "@angular/forms": "~17.3.12",
    "@angular/material": "~17.3.10",
    "@angular/platform-browser": "~17.3.12",
    "@angular/platform-browser-dynamic": "~17.3.12",
    "@angular/router": "~17.3.12",
    "@types/jasmine": "~5.1.4",
    "@types/uuid": "^9.0.2",
    "angular-imask": "^7.6.1",
    "bootstrap": "^5.3.3",
    "cross-env": "^7.0.3",
    "electron": "^25.1.1",
    "electron-builder": "^24.6.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngx-mat-timepicker": "^17.1.0",
    "ngx-material-timepicker": "^13.1.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.0",
    "zone.js": "~0.14.2"
  }
}
